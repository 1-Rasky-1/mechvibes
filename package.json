{
  "name": "mechvibes",
  "productName": "Mechvibes",
  "version": "1.1.0",
  "description": "Play mechanical keyboard sounds as you type.",
  "repository": "https://github.com/hainguyents13/mechvibes",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder -w",
    "build:win:zip": "electron-builder -w zip",
    "build:mac": "electron-builder -m",
    "build:linux": "electron-builder -l",
    "build:linux:ai": "electron-builder -l AppImage"
  },
  "keywords": [],
  "author": "hainguyents13",
  "license": "MIT",
  "iohook": {
    "targets": [
      "node-64",
      "electron-73"
    ],
    "platforms": [
      "win32",
      "darwin",
      "linux"
    ],
    "arches": [
      "x64",
      "ia32"
    ]
  },
  "build": {
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "src/assets/icon.png"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "src/assets/icon.png"
    },
    "linux": {
      "target": [
        {
          "target": "snap",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "src/assets/icon.png"
    }
  },
  "dependencies": {
    "glob": "^7.1.6",
    "howler": "^2.1.2",
    "iohook": "^0.6.2"
  },
  "devDependencies": {
    "electron": "^6.1.5",
    "app-builder-lib": "^22.2.0",
    "electron-builder": "^21.2.0",
    "electron-compile": "^6.4.4"
  }
}
